- cache 'tweets', :expires_in => 30.minutes do
  %h4
    =link_to "@VetsTech", "https://twitter.com/VetsTech"
    activity
  - Twitter.user_timeline("vetstech", count: 4).each do |tweet|
    %p
      != auto_link(tweet.text)
  %h4
    =link_to "@VetsTech", "https://twitter.com/VetsTech"
    favorite tweets
  - Twitter.favorites("vetstech", count: 3).each do |tweet|
    %p
      != auto_link(tweet.text)
      \- @#{link_to tweet.user.screen_name, "https://twitter.com/"+tweet.user.screen_name}
